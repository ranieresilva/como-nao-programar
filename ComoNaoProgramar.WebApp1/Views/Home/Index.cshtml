@model ComoNaoProgramar.WebApp1.Models.CalculoFolhaViewModel

@{
    ViewData["Title"] = "Folha de Pagamento Simplificada";
}

<div class="row">
    <h2>Cálculo de Salário Líquido</h2>
    <form>
        <div class="col-md-4 col-md-offset-4">
            <div class="row">
                <div class="form-group">
                    <label asp-for="SalarioBruto"></label>
                    <input asp-for="SalarioBruto" class="form-control" />
                </div>
            </div>
            @if (ViewBag.Mensagens != "")
            {
                <div class="row">
                    <ul>
                        @Html.Raw(ViewBag.Mensagens)
                    </ul>
                </div>
            }
            <div class="row">
                <div class="form-group">
                    <label asp-for="SalarioLiquido"></label>
                    <input asp-for="SalarioLiquido" class="form-control" value="@Model.SalarioLiquido.ToString("F2")" readonly />
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Calcular</button>
                </div>
            </div>
        </div>
    </form>
</div>